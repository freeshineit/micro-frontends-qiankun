{
  "name": "micro-frontend-qiankun",
  "version": "0.1.1",
  "description": "qiankun micro frontend demo (react, vue)",
  "scripts": {
    "dev": "pnpm run --filter \"*\" dev",
    "build": "pnpm run --filter \"*\" build && rm -rf docker/main docker/react-app docker/vue-app && mv ./main/dist docker/main && mv ./packages/react-app/dist docker/react-app && mv ./packages/vue-app/dist docker/vue-app",
    "build:main": "pnpm run --filter main build",
    "build:react": "pnpm run --filter react-app build",
    "build:vue": "pnpm run --filter vue-app build",
    "dev:main": "pnpm run --filter main dev",
    "dev:react": "pnpm run --filter react-app dev",
    "dev:vue": "pnpm run --filter vue-app dev",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "fix": "eslint --fix **/*.{ts,tsx}",
    "lint": "eslint --ext **/*.{ts,tsx}",
    "fmt": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,cjs}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.24.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt-cli": "^19.3.1",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-config-xx": "^1.10.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "ezuikit-js": "8.1.9-beta.3",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "sass": "^1.77.4",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "vite": "^5.4.18",
    "vite-plugin-qiankun": "^1.0.15"
  }
}
